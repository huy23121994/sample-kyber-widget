extends ../layout

block content
  script.
    setTimeout(() => {
      window.location.reload()
    }, 5000 )
  a(href="/") Back
  br
  
  h1 Your transaction

  table
    thead
      tr
        th Tx hash
        th Status
        th Block confirm
        th Title
        th Img
        th Price
    each tx in txs
      tr
        td
          a(href=`https://ropsten.etherscan.io/tx/${tx.hash}` target="_blank") #{tx.hash}
        td #{tx.status}
        td #{tx.block_confirm}
        td #{tx.title}
        td
          img(src=tx.img, alt="", width="100")
        td #{tx.price}
